<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="alekseon" translate="label" sortOrder="150">
            <label>Alekseon Extensions</label>
        </tab>
        <section id="alekseon_log_details" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
            <class>separator-top</class>
            <label>Log Details</label>
            <tab>alekseon</tab>
            <resource>Alekseon_LogDetails::logDetails</resource>
            <group id="trace" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Trace</label>
                <field id="enable" translate="label" type="select" sortOrder="5" showInDefault="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="log_level" translate="label" type="multiselect" sortOrder="5" showInDefault="1">
                    <label>For Selected Error Levels</label>
                    <source_model>Alekseon\LogDetails\Model\Config\Source\LogLevel</source_model>
                </field>
            </group>
            <group id="web" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Web</label>
                <field id="enable" translate="label" type="select" sortOrder="5" showInDefault="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="log_level" translate="label" type="multiselect" sortOrder="5" showInDefault="1">
                    <label>For Selected Error Levels</label>
                    <source_model>Alekseon\LogDetails\Model\Config\Source\LogLevel</source_model>
                </field>
            </group>
            <group id="cron" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Cron</label>
                <field id="enable" translate="label" type="select" sortOrder="5" showInDefault="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="log_level" translate="label" type="multiselect" sortOrder="5" showInDefault="1">
                    <label>For Selected Error Levels</label>
                    <source_model>Alekseon\LogDetails\Model\Config\Source\LogLevel</source_model>
                </field>
            </group>
            <group id="command" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Command</label>
                <field id="enable" translate="label" type="select" sortOrder="5" showInDefault="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="log_level" translate="label" type="multiselect" sortOrder="5" showInDefault="1">
                    <label>For Selected Error Levels</label>
                    <source_model>Alekseon\LogDetails\Model\Config\Source\LogLevel</source_model>
                </field>
            </group>
        </section>
    </system>
</config>